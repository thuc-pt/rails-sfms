<% if @comment.valid? %>
  $('.comment-<%= @comment.id %>').hide();
  $('<%= escape_javascript(render "cmt", cmt: @comment) %>').appendTo('.list-cmt-post-<%= @comment.post_id %>');
  $('#form-cmt-post-<%= @comment.post_id %>').html('<%= j render "form", comment: Comment.new, url: comments_path, post_id: params[:comment][:post_id] %>');
  $(".list-cmt-post-<%= @comment.post_id %>").animate({ scrollTop: $('.list-cmt-post-<%= @comment.post_id %>').prop("scrollHeight")}, 2000);
<% end %>
