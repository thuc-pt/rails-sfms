<% provide :page_name, t(".change_password") %>
<div id="form">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="form-content-2">
          <h3 class="text-center"><%= t ".change_password" %></h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
            <%= render "shared/errors", object: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <label><%= t ".new_password" %> <span class="require">*</span></label>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t ".confirm_new_password" %> <span class="require">*</span></label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="text-right">
              <%= f.submit t(".confirm"), class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-5">
        <div class="review">
          <h2 class="title"><%= t ".title" %></h2>
          <p><i class="fas fa-check"></i><%= t(".review-1").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-2").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-3").html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</div>
