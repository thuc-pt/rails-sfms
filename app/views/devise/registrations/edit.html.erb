<% provide :page_name, t(".change_password") %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/links" %>
    </div>
    <div class="col-md-9">
      <div class="account-info">
        <div class="row">
          <div class="col-md-3">
            <%= render "users/avatar" %><br>
            <%= render "shared/errors", object: resource %>
          </div>
          <div class="col-md-9">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
              <div class="form-group">
                <label><%= t ".email" %></label>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <i><%= t ".waiting" %> <%= resource.unconfirmed_email %></i>
                <% end %>
                <%= f.email_field :email, class: "form-control", disabled: true %>
              </div>
              <div class="form-group">
                <label><%= t ".current_password" %> <span class="require">*</span></label>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <label><%= t ".new_password" %> <span class="require">*</span></label>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="form-group">
                <label><%= t ".confirm_new_password" %> <span class="require">*</span></label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
              <div class="text-right">
                <%= f.submit t(".submit"), class: "btn btn-success", disabled: true, id: "change-password" %>
                <%= link_to t(".back"), current_user, class: "btn btn-outline-black" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
