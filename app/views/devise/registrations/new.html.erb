<% provide :page_name, t(".signup") %>
<div id="form">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="form-content">
          <h3 class="text-center"><%= t ".signup" %></h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "shared/errors", object: resource %>
            <div class="form-group">
              <label><%= t ".email" %> <span class="require">*</span></label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t ".password" %> <span class="require">*</span></label>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t ".confirm" %> <span class="require">*</span></label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t ".name" %> <span class="require">*</span></label>
              <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit t(".submit"), class: "btn btn-success btn-block" %>
            </div>
          <% end %>
          <br>
          <div class="row">
            <div class="col-6">
              <%= link_to t(".already_account"), new_session_path(resource_name),
                class: "btn btn-outline-danger btn-block" %>
            </div>
            <div class="col-6">
              <%= link_to t(".confirmation"), new_confirmation_path(resource_name),
                class: "btn btn-outline-warning btn-block" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="review">
          <h2 class="title"><%= t ".title" %></h2>
          <p><i class="fas fa-check"></i><%= t(".review-1").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-2").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-3").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-4").html_safe %></p>
          <p><i class="fas fa-check"></i><%= t(".review-5").html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</div>
