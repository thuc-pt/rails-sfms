<% if notice %>
  <div class="alert alert-success">
    <div class="container">
      <button class="close" data-dismiss="alert">&times;</button>
      <%= notice %>
    </div>
  </div>
<% elsif alert %>
  <div class="alert alert-danger">
    <div class="container">
      <button class="close" data-dismiss="alert">&times;</button>
      <%= alert %>
    </div>
  </div>
<% else %>
  <% flash.each do |type, msg| %>
    <div class="alert alert-<%= type %>">
      <div class="container">
          <button class="close" data-dismiss="alert">&times;</button>
          <%= msg %>
      </div>
    </div>
  <% end %>
<% end %>
