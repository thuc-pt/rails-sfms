<% if @notifications.present? %>
  <% @notifications.each do |notice| %>
    <div class="dropdown-item <%= notice.seen.blank? ? "not-seen" : "seen" %>">
      <%= link_to update_seen_notice_notification_path(notice), remote: true, class: "link-in-dropdown" do %>
        <div><%= notice.action %></div>
        <div class="text-right time-created"><i><%= timeago notice.created_at %></i></div>
      <% end %>
    </div>
  <% end %>
  <div class="text-center"><%= link_to t(".all_notice"), notifications_path %></div>
<% else %>
  <%= t ".no_notification" %>
<% end %>
