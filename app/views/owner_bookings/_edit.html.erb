<div class="modal fade booking-modal" id="booking-edit-<%= object.timesheet_id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5><%= t ".edit_booking" %></h5>
        <button class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= form_for object, url: pitch_owner_booking_path(@pitch.id, object.id), remote: true do |f| %>
          <div class="form-group">
            <label><%= t ".date" %></label>
            <label id="err-date-<%= object.timesheet_id %>" class="has-error"></label>
            <%= f.text_field :date, "data-id": object.timesheet_id, "data-pid": @pitch.id,
              class: "form-control text-center pitch-edit-booking-date", id: "edit-booking-date-#{object.timesheet_id}" %>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <label><%= t ".time" %></label>
                <div class="form-control text-center time-field">
                  <%= object.timesheet_full_time %>
                </div>
              </div>
            </div>
            <div class="col-6">
              <div class="form-group">
                <label><%= t ".price" %></label>
                <div class="form-control text-center price-field"><%= number_to_currency object.timesheet_price %></div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label><%= t ".name" %></label>
            <label id="err-name-<%= object.timesheet_id %>" class="has-error"></label>
            <%= f.text_field :name, class: "form-control text-center" %>
          </div>
          <div class="form-group">
            <label><%= t ".phone_number" %></label>
            <label id="err-phone-<%= object.timesheet_id %>" class="has-error"></label>
            <%= f.text_field :phone_number, class: "form-control text-center" %>
          </div>
          <%= f.hidden_field :timesheet_id %>
          <div class="row">
            <div class="col-md-6">
              <%= f.button type: "submit", class: "btn btn-success", id: "btn-update-booking" do %>
                <i class="fas fa-save"></i><%= t "edit" %>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to t("delete"), pitch_owner_booking_path(@pitch.id, object.id), method: :delete, data: {confirm: t("confirm_delete")}, class: "btn btn-outline-black" %>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
