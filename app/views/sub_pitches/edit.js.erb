$('#form-sub-pitch').html('<%= j render "form", sub_pitch: @sub_pitch, url: pitch_sub_pitch_path(@sub_pitch.pitch_id, @sub_pitch.id), options: @sub_pitch_types %>');
$('#sub_pitch_sub_pitch_type_id').select2({width: '100%'});
$('#submit-sub-pitch').removeAttr('disabled');
$('#sub_pitch_sub_pitch_type_id').on('change', function() {
  var text = $(this).find('option:selected').text();
  if (parseInt($(this).val()) > 0)
    $('#sub_pitch_name').val(text);
  else
    $('#sub_pitch_name').val('');
  condition_disable();
});
$('#sub_pitch_name').on('input', function() {
  condition_disable();
});
