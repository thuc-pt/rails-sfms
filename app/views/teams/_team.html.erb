<tr class="text-center">
  <td><%= team_counter + 1 %></td>
  <td><%= logo_for team, "team-logo-index" %></td>
  <td><%= team.name %></td>
  <td><%= team.level_name %></td>
  <td><%= team.win %></td>
  <td><%= team.member.size %></td>
  <td>
    <%= link_to team, class: "btn btn-outline-black" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <% if team.user == current_user %>
      <%= link_to edit_team_path(team), class: "btn btn-outline-black" do %>
        <i class="fa fa-edit"></i>
      <% end %>
      <%= link_to team, method: :delete, data: {confirm: t("confirm_delete")}, class: "btn btn-outline-black delete-team", remote: true do %>
        <i class="fa fa-trash-alt"></i>
      <% end %>
    <% end %>
  </td>
</tr>
